function  validation(){

  var fn = document.getElementById("fn").value;

  var ln = document.getElementById("ln").value;

  var data = document.getElementById("p1").value;

  var checkbox1 = document.getElementById("checkbox1").checked;

  var checkbox2 = document.getElementById("checkbox2").checked;

  var select_box = document.getElementById("select_box").selectedIndex;
 
  var error = 0;
  
  
  document.getElementById("efn").innerHTML = '';


  if(fn==""){

    error = error+1;

  }
  
  if(password.length < 7){
	
	error = error+1;
	
  }

  if(!email.match(/@/)){
			
	error = error+1;

  }
		
  if(checkbox1==false && checkbox2==false){

    error = error+1;
	
	document.getElementById("efname").innerHTML = '**first name required';
	
	document.getElementById("fn").className = "red";

			
  }
  
  if(select_box==0){

    error = error+1;
  }

  if(error==0){

    return true;
  }

  else{

    return false;
  }

}






