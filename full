    # Output RSS feed
    echo 'RSS!';
}


\MyProject\output();

?>





which work autometic


__contstract autometic call;

__destruct autocall last;



class HTMLgenerator {

  function __construct() {
  
    echo "<html><body>";
	
  }
  function __destruct() {
  
    echo "</body></html>";
	
  }
  
} 

$html = new HTMLgenerator();

echo "Hello, world!";


