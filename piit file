class 24:


 Create a product table:

 SELECT MIN(Price) FROM Products; 

 SELECT LENGTH(name) AS LengthOfName FROM product; 

 SELECT name, LOCATE("a", name) FROM product;

 SELECT LOWER(name) AS LowercaseCustomerName FROM product;

 SELECT LTRIM(name) AS LeftTrimmedString from product;

 SELECT MID(CustomerName, 1, 10) AS ExtractString FROM Customers; 
 
 SELECT REPEAT(CustomerName, 20) FROM Customers;

 SELECT RIGHT(CustomerName, 20) AS ExtractString FROM Customers;

 SELECT RPAD(CustomerName, 30, "...") AS RP FROM Customers; 

 SELECT SUBSTR(CustomerName, 2, 5) AS ExtractString FROM Customers;

 SELECT column_name(s) FROM table_name WHERE condition GROUP BY column_name(s)
 ORDER BY column_name(s);      
        
 SELECT FLOOR(25.75); 

 SELECT COUNT(ProductID) AS NumberOfProducts FROM Products;

 SELECT POW(4, 2); 

 SELECT RAND();  
        
 SELECT CURRENT_TIME();
 
 SELECT DATE("2017-06-15");    


 view table

 Create View `MyViewName` as 
    Select
        col1, col2, col3
    From
 myTable T



